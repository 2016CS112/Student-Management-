
@{
    ViewBag.Title = "Login Student";
    Layout = "~/Views/Shared/_LayoutS.cshtml";
}

<h2>Welcome To  <b>SMS</b> Student Management System</h2><br>
<h3><b>Login</b> Here to view your account data.</h3>

<h4>Don't have a Account! @Html.ActionLink("Sign Up" , "signup" , "saccount")</h4>

<form>
    <div class="form-group">
        <lable for ="reg#">Registration Number</lable>
        <input id="reg#" class="form-control" placeholder="XXXX-XX-XXX" type="text"> 
        </div>
    <div class="form-group">
        <lable for="pass">Enter Password</lable>
        <input id="pass" class="form-control" placeholder="Password Type Here!" type="text">
    </div>
</form>

<div>
    <h4>@Html.ActionLink("back to Main Page" , "index" , "Home")</h4>
    </div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
